<h2>Books</h2>
<table>
  <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
   </tr>
  </thead>
  
 <% @books.each do |book|%>
  <tbody>
   <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><%= link_to "Show", book_path(book),class:"index" %></td>
     <td><%= link_to "Edit", edit_book_path(book),class:"index" %></td>
     <td><%= link_to "Destroy", book_path(book),class:"index", method: :delete %></td>
  </tr>
 </tbody>
<% end %>
</table>

<h2>New book</h2>

<div class="box2">
<%= form_with model:@book, url:'/books', local:true do |f| %>
<% if @book.errors.any? %>
 <div class="alert alert-danger">
   <h2><%= pluralize(@book.errors.count, "error") %>errors prohibited this book from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
<% end %>

<p>Title</p>
<%= f.text_field :title %>
<p>Body</p>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>
</div>
